{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 4],
    "semi": ["off", "always"],
    "no-console": "off",
    "no-unused-vars": "off"
  }
}